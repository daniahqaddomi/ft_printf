
#include <stdio.h>
#include<unistd.h>

int ft_putchar(char c)
{
    return (write(1, &c, 1));
}

int ft_putstring(char *str)
{
    int      count;

   count = 0;
   if (str == NULL)
    {
       write(1,"(null)",6);
       return (6);
    }
    while (str[count] != '\0')
    {
       ft_putchar(str[count]);
      count++;
    }
    return(count);
}

int ft_putnumber(int num)
{
    int count;

    count = 0;
    if (num == -2147483648)
    {
        return(ft_putstring("-2147483648"));

    }
    if (num < 0)
    {
        count += ft_putchar('-');
        num = -num;
    }
    if (num >= 10)
    {
    count += ft_putnumber(num / 10);
    }
    count += ft_putchar((num % 10) + '0');
    return (count); 
}

int ft_put_unsigned_number (unsigned int num)
{
    int count;

    count = 0;
    if (num == 0)
    {
        return(ft_putchar('0'));

    }
    if (num >= 10)
    {
        count += ft_put_unsigned_number(num / 10);
    }
    count += ft_putchar((num % 10) + '0'); 
       return (count);
}

int main(void) {
    int i;
    i = ft_put_unsigned_number(2147483648);
    printf("\n %u", i);
    return 0;
}
